<div class="containter">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 class="text-center">Property managers near you</h1>
            <p class="text-center">Welcome to the Placiest community.  Below are the best property managers and hosts near you.</p>
            <div class="search">
                 <br/>
                 <div class="md-form mt-0">
                    <%= form_tag(users_path, :method => "get", id: "search-form") do %>
                    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Your property location" %> 
                    <% end %>
                    </br>
                </div>
            </div> 
            <ul class="list-unstyled">
                <% @users.each do |user| %>
                    <% if user.profile %>
                        <li>
                            <div class="well row <%= cycle('white-bg', '') %>">
                                <div class="col-sm-4 text-center">
                                    <% if user.profile.avatar %>
                                        <%= link_to user do %>
                                        <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                                        <% end %>
                                    <% end %>
                                </div>
                                <div>
                                    <%= link_to user do %>
                                    <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                                    <% end %>
                                    <p><%= user.profile.services_offered %></p>
                                    <p><%= user.profile.description %></p>
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>
            </ul>
        </div>
    </div>
</div>